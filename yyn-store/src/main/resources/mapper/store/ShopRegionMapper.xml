<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.yyn.store.mapper.ShopRegionMapper">
    
    <resultMap type="ShopRegion" id="ShopRegionResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="pid"    column="pid"    />
        <result property="code"    column="code"    />
        <result property="level"    column="level"    />
    </resultMap>

    <sql id="selectShopRegionVo">
        select id, name, pid, code, level from shop_region
    </sql>

    <select id="selectShopRegionList" parameterType="ShopRegion" resultMap="ShopRegionResult">
        <include refid="selectShopRegionVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="pid != null "> and pid = #{pid}</if>
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="level != null "> and level = #{level}</if>
        </where>
    </select>
    
    <select id="selectShopRegionById" parameterType="Long" resultMap="ShopRegionResult">
        <include refid="selectShopRegionVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertShopRegion" parameterType="ShopRegion" useGeneratedKeys="true" keyProperty="id">
        insert into shop_region
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="pid != null">pid,</if>
            <if test="code != null and code != ''">code,</if>
            <if test="level != null">level,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="pid != null">#{pid},</if>
            <if test="code != null and code != ''">#{code},</if>
            <if test="level != null">#{level},</if>
         </trim>
    </insert>

    <update id="updateShopRegion" parameterType="ShopRegion">
        update shop_region
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="pid != null">pid = #{pid},</if>
            <if test="code != null and code != ''">code = #{code},</if>
            <if test="level != null">level = #{level},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteShopRegionById" parameterType="Long">
        delete from shop_region where id = #{id}
    </delete>

    <delete id="deleteShopRegionByIds" parameterType="String">
        delete from shop_region where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>