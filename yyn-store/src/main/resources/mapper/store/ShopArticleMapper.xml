<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.yyn.store.mapper.ShopArticleMapper">
    
    <resultMap type="ShopArticle" id="ShopArticleResult">
        <result property="articleId"    column="article_id"    />
        <result property="title"    column="title"    />
        <result property="showType"    column="show_type"    />
        <result property="categoryId"    column="category_id"    />
        <result property="imageId"    column="image_id"    />
        <result property="content"    column="content"    />
        <result property="sort"    column="sort"    />
        <result property="status"    column="status"    />
        <result property="virtualViews"    column="virtual_views"    />
        <result property="actualViews"    column="actual_views"    />
        <result property="isDelete"    column="is_delete"    />
        <result property="storeId"    column="store_id"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectShopArticleVo">
        select article_id, title, show_type, category_id, image_id, content, sort, status, virtual_views, actual_views, is_delete, store_id, create_by, create_time, update_by, update_time, remark from shop_article
    </sql>

    <select id="selectShopArticleList" parameterType="ShopArticle" resultMap="ShopArticleResult">
        <include refid="selectShopArticleVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="showType != null "> and show_type = #{showType}</if>
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="imageId != null "> and image_id = #{imageId}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="sort != null "> and sort = #{sort}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="virtualViews != null "> and virtual_views = #{virtualViews}</if>
            <if test="actualViews != null "> and actual_views = #{actualViews}</if>
            <if test="isDelete != null "> and is_delete = #{isDelete}</if>
            <if test="storeId != null "> and store_id = #{storeId}</if>
        </where>
    </select>
    
    <select id="selectShopArticleByArticleId" parameterType="Long" resultMap="ShopArticleResult">
        <include refid="selectShopArticleVo"/>
        where article_id = #{articleId}
    </select>
        
    <insert id="insertShopArticle" parameterType="ShopArticle" useGeneratedKeys="true" keyProperty="articleId">
        insert into shop_article
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="showType != null">show_type,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="imageId != null">image_id,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="sort != null">sort,</if>
            <if test="status != null">status,</if>
            <if test="virtualViews != null">virtual_views,</if>
            <if test="actualViews != null">actual_views,</if>
            <if test="isDelete != null">is_delete,</if>
            <if test="storeId != null">store_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="showType != null">#{showType},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="imageId != null">#{imageId},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="sort != null">#{sort},</if>
            <if test="status != null">#{status},</if>
            <if test="virtualViews != null">#{virtualViews},</if>
            <if test="actualViews != null">#{actualViews},</if>
            <if test="isDelete != null">#{isDelete},</if>
            <if test="storeId != null">#{storeId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateShopArticle" parameterType="ShopArticle">
        update shop_article
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="showType != null">show_type = #{showType},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="imageId != null">image_id = #{imageId},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null">status = #{status},</if>
            <if test="virtualViews != null">virtual_views = #{virtualViews},</if>
            <if test="actualViews != null">actual_views = #{actualViews},</if>
            <if test="isDelete != null">is_delete = #{isDelete},</if>
            <if test="storeId != null">store_id = #{storeId},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where article_id = #{articleId}
    </update>

    <delete id="deleteShopArticleByArticleId" parameterType="Long">
        delete from shop_article where article_id = #{articleId}
    </delete>

    <delete id="deleteShopArticleByArticleIds" parameterType="String">
        delete from shop_article where article_id in 
        <foreach item="articleId" collection="array" open="(" separator="," close=")">
            #{articleId}
        </foreach>
    </delete>
</mapper>